<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="manipulator"
      params="parent end_effector_link link_colour_1 link_colour_2 *origin">
  <xacro:property name="PI" value="3.14159"/>

  <joint name="world_to_base" type="fixed">
    <origin xyz="0 0 0.0465"/>
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="package://kyun_description/mesh/servo01.stl" scale="0.001 0.001 0.001"/>
        <origin xyz="0 0 0.0465"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://kyun_description/mesh/servo01.stl" scale="0.001 0.001 0.001"/>
        <origin xyz="0 0 0.0465"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.0572"/>
      <inertia ixx="0.00093819916" ixy="0" ixz="0" iyy="0.00158169916" iyz="0" izz="0.001417845"/>
    </inertial>
  </link>

  <joint name="base_to_2nd" type="continuous">
    <parent link="base_link"/>
    <child link="2nd_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <dynamics damping="0.1"/>
  </joint>

  <link name="2nd_link">
    <visual>
      <geometry>
        <mesh filename="package://kyun_description/mesh/frame12.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://kyun_description/mesh/frame12.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.6"/>
      <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
    </inertial>
  </link>

  <joint name="2nd_to_3rd" type="continuous">
    <parent link="2nd_link"/>
    <child link="3rd_link"/>
    <origin xyz="-0.00963 0.019 0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <dynamics damping="0.1"/>
  </joint>

  <link name="3rd_link">
    <visual>
      <geometry>
        <mesh filename="package://kyun_description/mesh/servo02.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://kyun_description/mesh/servo02.stl" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.6"/>
      <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
    </inertial>
  </link>

  <xacro:macro name="manipulator"
      params="parent end_effector_link link_colour_1 link_colour_2 *origin">
    <xacro:property name="PI" value="3.14159"/>
  </xacro:macro>
</robot>
