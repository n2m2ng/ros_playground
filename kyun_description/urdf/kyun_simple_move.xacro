<?xml version="1.0"?>
<robot name="kyun" xmlns:xacro="http://www.ros.org/wiki/xacro">

<link name="world"/>
<joint name="world_to_base" type="fixed">
  <origin xyz="0 0 0.0465"/>
  <parent link="world"/>
  <child link="base_link"/>
</joint>

<link name="base_link">
  <visual>
    <geometry>
      <mesh filename="package://kyun_description/mesh/servo01.stl" scale="0.001 0.001 0.001"/>
      <origin xyz="0 0 0.0465"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <mesh filename="package://kyun_description/mesh/servo01.stl" scale="0.001 0.001 0.001"/>
      <origin xyz="0 0 0.0465"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.0572"/>
    <inertia ixx="0.00093819916" ixy="0" ixz="0" iyy="0.00158169916" iyz="0" izz="0.001417845"/>
  </inertial>
</link>

<joint name="base_to_2nd" type="continuous">
  <parent link="base_link"/>
  <child link="2nd_link"/>
  <origin xyz="0 0 0" rpy="0 0 0"/>
  <axis xyz="0 0 1"/>
  <dynamics damping="0.1"/>
</joint>

<link name="2nd_link">
  <visual>
    <geometry>
      <mesh filename="package://kyun_description/mesh/frame12.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <mesh filename="package://kyun_description/mesh/frame12.stl" scale="0.001 0.001 0.001"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.6"/>
    <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
  </inertial>
</link>
<gazebo>
  <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
    <robotNamespace>/kyun_simple_work</robotNamespace>
    <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
    <legacyModeNS>true</legacyModeNS>
  </plugin>
</gazebo>
</robot>
